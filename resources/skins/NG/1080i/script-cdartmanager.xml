<?xml version="1.0" encoding="UTF-8"?>
<window>

    <controls>

        <control type="group"> <!-- Main -->
            <left>0</left>
            <top>0</top>
            <right>0</right>
            <bottom>0</bottom>
            <control type="image">  <!-- Background -->
                <texture>wallpaper.jpg</texture>
                <aspectratio>scale</aspectratio>
            </control>

            <control type="group"> <!-- Wrapper -->

                <left>40</left>
                <right>40</right>
                <top>40</top>
                <bottom>40</bottom>

                <control type="group"> <!-- Left -->
                    <width>350</width>
                    <control type="group"> <!-- Logo -->
                        <height>100</height>
                        <control type="image">  <!-- Logo Background -->
                            <texture>textures/95_lightgreen.png</texture>
                        </control>
                        <control type="image">  <!-- Logo -->
                            <left>0</left>
                            <top>0</top>
                            <width>100</width>
                            <height>100</height>
                            <texture>icon.jpg</texture>
                        </control>
                        <control type="label">
                            <top>30</top>
                            <left>110</left>
                            <width>240</width>
                            <height>100</height>
                            <font>font13</font>
                            <align>left</align>
                            <label>cdART Manager</label>
                            <textcolor>ffffffff</textcolor>
                        </control>
                    </control>

                    <control type="group"> <!-- Menu -->
                        <top>100</top>
                        <bottom>0</bottom>
                        <control type="image">  <!-- Menu Background -->
                            <texture>textures/95_blue.png</texture>
                        </control>

                        <control type="list" id="9100"> <!-- Menu -->

                            <itemlayout height="100">
                                <control type="image">
                                    <top>20</top>
                                    <left>20</left>
                                    <width>50</width>
                                    <height>50</height>
                                    <info>Listitem.ActualIcon</info>
                                    <colordiffuse>ff95a5a6</colordiffuse>
                                </control>
                                <control type="label">
                                    <top>25</top>
                                    <left>90</left>
                                    <width>240</width>
                                    <height>100</height>
                                    <font>font13</font>
                                    <align>left</align>
                                    <info>ListItem.Label</info>
                                    <textcolor>ff95a5a6</textcolor>
                                </control>
                            </itemlayout>

                            <focusedlayout height="100">
                                <control type="image">
                                    <top>10</top>
                                    <width>350</width>
                                    <height>70</height>
                                    <texture>textures/95_darkblue.png</texture>
                                </control>
                                <control type="image">
                                    <top>20</top>
                                    <left>20</left>
                                    <width>50</width>
                                    <height>50</height>
                                    <info>Listitem.ActualIcon</info>
                                    <colordiffuse>0xff26ad5e</colordiffuse>
                                </control>
                                <control type="label">
                                    <top>25</top>
                                    <left>90</left>
                                    <height>100</height>
                                    <width>240</width>
                                    <font>font13</font>
                                    <align>left</align>
                                    <info>ListItem.Label</info>
                                </control>
                            </focusedlayout>

                        </control>

                    </control>

                </control>

                <control type="group" id="9200"> <!-- Right -->
                    <left>350</left>

                    <control type="group"> <!-- Bottom -->
                        <top>190</top>
                        <control type="image">  <!-- Menu Background -->
                            <texture>textures/95_lightgray.png</texture>
                        </control>
                    </control>

                    <control type="group"> <!-- Middle -->
                        <top>100</top>
                        <control type="image">  <!-- Background -->
                            <height>90</height>
                            <texture>textures/95_white.png</texture>
                        </control>
                        <control type="image">  <!-- Border -->
                            <top>90</top>
                            <height>2</height>
                            <texture>textures/95_mediumgray.png</texture>
                        </control>
                    </control>

                    <control type="group"> <!-- Top -->
                        <height>100</height>
                        <control type="image">  <!-- Background -->
                            <height>100</height>
                            <texture>textures/95_white.png</texture>
                        </control>
                        <control type="image">  <!-- Border -->
                            <top>98</top>
                            <height>2</height>
                            <texture>textures/95_mediumgray.png</texture>
                        </control>

                        <control type="label" id="9201">
                            <font>font13</font>
                            <aligny>center</aligny>
                            <align>center</align>
                            <label>Welcome</label>
                            <textcolor>ff27ae60</textcolor>
                        </control>

                        <!-- loading animation -->
                        <control type="group" id="9202">
                            <top>98</top>
                            <animation type="Conditional" reversible="false" condition="true" pulse="true">
                                <effect type="zoom" start="5,100" end="100,100" time="1200" center="auto" ease="out"/>
                            </animation>
                            <control type="image">
                                <height>2</height>
                                <texture>textures/solid_mediumgreen.png</texture>
                            </control>
                        </control>

                    </control>

                </control>

            </control>

        </control>

        <!-- DASHBOARD -->
        <control type="group" id="9300">
            <visible>StringCompare(Container(9100).ListItem(0).Label2, "DASHBOARD")</visible>
            <left>400</left>
            <top>150</top>
            <right>50</right>
            <bottom>50</bottom>

            <control type="group">
                <height>70</height>
            </control>

            <control type="group">
                <top>90</top>
                <control type="label" id="9301">
                    <!-- Albumcount -->
                    <font>font13</font>
                    <label>$NUMBER[0]</label>
                    <textcolor>FF000000</textcolor>
                </control>
                <control type="label" id="9302">
                    <!-- Artistcount -->
                    <left>100</left>
                    <font>font13</font>
                    <label>$NUMBER[0]</label>
                    <textcolor>FF000000</textcolor>
                </control>

            </control>

        </control>


    </controls>

</window>
